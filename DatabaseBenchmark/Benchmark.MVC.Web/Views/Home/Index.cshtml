@model Benchmark.MVC.Web.Models.JsonObjectModel

@using (Html.BeginForm("Index", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.JsonDataCount, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.JsonDataCount, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Submit" />
        </div>
    </div>
}


@if (Model.ProductsObjectInJson != null)
{
<p>
    Spended Time: 
    @Model.SpendedTime.Hours Hours
    @Model.SpendedTime.Minutes Minutes
    @Model.SpendedTime.Seconds Seconds
    @Model.SpendedTime.Milliseconds Miliseconds
</p>


    <table class="table">
        <tr>
            <th>
                Key
            </th>
            <th>
                Value
            </th>
        </tr>

        @foreach (var item in Model.ProductsObjectInJson)
        {
            <tr>
                <td>
                    @item.ProductKey
                </td>
                <td>
                   @item.ProductValue
                </td>
            </tr>
        }

    </table>
}
