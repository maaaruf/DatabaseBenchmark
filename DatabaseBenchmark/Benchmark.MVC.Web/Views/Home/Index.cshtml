@model Benchmark.MVC.Web.Models.JsonObjectModel

@using (Html.BeginForm("Index", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.JsonDataCount, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.JsonDataCount, new { @class = "form-control", min = "0", oninput = "validity.valid||(value='');", dir = "rtl" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Submit" />
        </div>
    </div>
}

@if (Model.JsonDataCount > 0)
{
    <p>
        Start Time = @Model.StartTime <br />
        End Time = @Model.EndTime <br />

        Spended Time:
        @Model.TotalSpendedTime.Hours Hours
        @Model.TotalSpendedTime.Minutes Minutes
        @Model.TotalSpendedTime.Seconds Seconds
        @Model.TotalSpendedTime.Milliseconds Miliseconds
    </p>


